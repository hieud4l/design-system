{
    "source": [
        "tokens/**/*.json"
    ],
    "platforms": {
        "css": {
            "transformGroup": "css",
            "buildPath": "build/css/",
            "files": [
                {
                    "destination": "variables.css",
                    "format": "css/variables"
                }
            ]
        },
        "scss": {
            "transformGroup": "scss",
            "buildPath": "build/scss/",
            "files": [
                {
                    "destination": "_variables.scss",
                    "format": "scss/variables"
                }
            ]
        },
        "json": {
            "transformGroup": "js",
            "buildPath": "build/json/",
            "files": [
                {
                    "destination": "tokens.json",
                    "format": "json/flat"
                }
            ]
        }
    }
}